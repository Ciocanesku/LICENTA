<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resetare Parolă</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="form-container">
        <h1>Resetare Parolă</h1>
        <form id="forgotPasswordForm" class="auth-form">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="Introduceți email-ul" required>
            </div>
            <button type="submit" class="btn">Trimite</button>
        </form>
    </div>

    <script>
        document.getElementById('forgotPasswordForm').addEventListener('submit', async function(event) {
            event.preventDefault();

            const email = document.getElementById('email').value;

            const response = await fetch('/forgot-password', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email })
            });

            if (response.ok) {
                alert('Verifică-ți email-ul pentru link-ul de resetare.');
            } else {
                alert('Eroare la solicitarea resetării parolei.');
            }
        });
    </script>
</body>
</html>
